# syntax=docker/dockerfile:1
FROM golang:1.22-alpine AS build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/w40k-api ./cmd/api

FROM alpine:3.20
WORKDIR /srv
# Copy only needed assets (src CSVs) and binary
COPY --from=build /out/w40k-api /usr/local/bin/w40k-api
COPY src ./src
COPY public ./public
ENV PORT=8080
EXPOSE 8080
CMD ["/usr/local/bin/w40k-api"]
