# syntax=docker/dockerfile:1
FROM golang:1.22-alpine AS build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/w40k-game ./cmd/game

FROM alpine:3.20
WORKDIR /srv
COPY --from=build /out/w40k-game /usr/local/bin/w40k-game
# Game needs to call the API; set default to local address, override in Cloud Run to the API service URL
ENV PORT=8081
ENV DATA_API_BASE=http://localhost:8080
EXPOSE 8081
CMD ["/usr/local/bin/w40k-game"]
